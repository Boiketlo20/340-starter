<h1><%= title %></h1>

<%- messages() %>

<form class="review" action="/account/review/update" method="post" >
    <span>  Review Must be Minimum 10 characters"</span>

   <label for="review_date">Review Date</label>
   <input type="text" id="review_date" name="review_date" value="<%= review.review_date %>" disabled></input>

    <label for="review_text">Review</label>
    <textarea id="review_text" name="review_text" rows="10" cols="100"   required ><%= review.review_text %> </textarea>

    <input type="hidden" name="review_id" value="<%= review.review_id %>">

    <input type="submit" value="Update">
</form>