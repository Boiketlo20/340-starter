<%# The Content Heading %>
<% if (title) { %>
<h1><%= title %> </h1>
<% } else {
    res.redirect('/')
} %>
<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>
<form  action="/inv/addClassification" method="post" >
    <label for="classification_name">Classification Name</label>
    <span>Name must be alphabetic characters only</span>
    <input type="text" id="classification_name" name="classification_name" required pattern="^[A-Za-z]+$">

    <input type="submit" value="Add Classification">
</form>