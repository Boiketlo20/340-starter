<%# The Content Heading %>
<% if (title) { %>
<h1><%= title %> </h1>
<% } else {
    res.redirect('/')
} %>

<%# messages() %>

<%# The Inventory Items Display %>
<%- grid %>
<%- reviewsHTML %>
<% if (locals.accountData) { %>
<h1>Add Your Own Review</h1>
<form class="review" action="/inv/review" method="post" >

    <label for="name">Screen Name:</label>
    <input type="text" name="name" id="name" value="<%= locals.accountData.account_firstname[0] %><%= locals.accountData.account_lastname %>" disabled>

    <label for="review_text">Review</label>
    <textarea id="review_text" name="review_text" rows="10" cols="100" required placeholder="Minimum of 10 characters"></textarea>

    <input type="submit" value="Post Review">

    <input type="hidden" name="inv_id" value="<%= item.inv_id %>">

    <input type="hidden" name="account_id" value="<%= locals.accountData.account_id %>">
</form>
<% } else { %>
    <p>You must <a href="/account/login">login</a> to write a review</p> 
<% } %>